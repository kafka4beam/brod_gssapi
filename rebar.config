{erl_opts, [
    warn_unused_vars,
    warn_shadow_vars,
    warn_unused_import,
    warn_obsolete_guard,
    debug_info
]}.

{project_plugins, [
    {rebar3_hex, "~> 7.0.1"},
    {rebar3_format, "~> 1.0.1"},
    {erlfmt, "~> 1.0.0"},
    {rebar3_ex_doc, "~> 0.2.9"},
    {rebar3_lint, "~> 1.0.2"},
    {rebar3_hank, "~> 1.3.0"}
]}.

{deps, [
    {sasl_auth, "2.0.0-rc1"},
    {kafka_protocol,
        {git, "https://github.com/starbelly/kafka_protocol.git",
            {ref, "fec3eccbc26ef502efe3dc2f1033aa1a4faeafa6"}}}
]}.

{xref_checks, [
    undefined_function_calls,
    locals_not_used,
    deprecated_function_calls,
    deprecated_functions
]}.

{dialyzer, [
    {warnings, [error_handling, unknown, unmatched_returns]},
    {plt_extra_apps, [ssl]}
]}.

{profiles, [
    {test, [
        {deps, [{meck, "0.9.2"}, {kafka_protocol, "4.0.3"}]},
        {erl_opts, [nowarn_export_all]}
    ]}
]}.

{format, [
    {files, ["src/*.erl", "include/*.hrl"]},
    {formatter, erlfmt_formatter},
    {options, #{print_width => 120, ignore_pragma => true}}
]}.

{cover_enabled, true}.
{cover_opts, [verbose]}.

{alias, [
    {test, [ct, {cover, "-v"}]},
    {check, [hank, xref, dialyzer]}
]}.
